<li id="<%= dom_id(task) %>">
  <%= task.title %>
  (
  <%= link_to("Start", task_path(task, status: Task::Status::IN_PROGRESS), method: :patch, remote: true) if task.not_started? %>

  <%= link_to("Finished", task_path(task, status: Task::Status::FINISHED), method: :patch, remote: true) if task.in_progress? %>

  <!-- <% if task.in_progress? %>
  |
  <% end %> -->
  <%= content_tag(:span, "|") if task.in_progress? %>

  <%= link_to("Shelf", task_path(task, status: Task::Status::NOT_STARTED), method: :patch, remote: true) if task.in_progress? || task.finished? %>

  <%= content_tag(:span, "|") %>

  <%= link_to "Share", new_task_share_path(task_id: task.id) %>
  )
</li>
